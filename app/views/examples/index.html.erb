<%= form_tag '/examples', method: :get do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag :name, params[:name] %>
  <%= label_tag(:cat, "Category:") %>
  <%= select_tag "category", options_for_select([ "any", "webgl","canvas", "misc", "webvr" ], params[:category] || "any") %>
     <%# :selected => params[:category] %>
  <%= label_tag(:lifted, "Lifted:") %>
